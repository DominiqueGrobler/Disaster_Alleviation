@model Disaster_Alleviation.Models.Disaster

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #E5E9ED;
    }
    /* Set a style for all buttons */
    button {
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        color: white;
        padding: 100px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 250px;
        height: 250px;
        border-radius: 8px;
    }

        button:hover {
            opacity: 0.8;
        }

    a {
        color: white;
        background-color: transparent;
    }

        a:hover {
            color: white;
            background-color: transparent;
        }

    .input-container {
        display: -ms-flexbox; /* IE10 */
        display: flex;
        width: 100%;
        margin-bottom: 15px;
        border-radius: 4px;
    }

    .icon {
        padding: 10px;
        background: #A264B4;
        color: white;
        min-width: 50px;
        text-align: center;
    }

    .input-field {
        width: 100%;
        padding: 10px;
        outline: none;
    }

        .input-field:focus {
            border: 2px solid #A264B4;
        }


    /* Set a style for all buttons */
    button {
        background-color: #A264B4;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
        height: 50px;
    }

        button:hover {
            opacity: 0.8;
        }

    /* Extra styles for the cancel button */
    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #FF914D;
    }

    /* Center the image and position the close button */
    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
        position: relative;
    }

    img.avatar {
        width: 40%;
        border-radius: 50%;
    }

    .container {
        padding: 16px;
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }

    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        padding-top: 60px;
    }

    /* Modal Content/Box */
    .modal-content {
        background-color: #CEBAD4;
        margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
        border: 1px solid #888;
        width: 80%; /* Could be more or less, depending on screen size */
        box-shadow: 0 0 30px 0 #7E0272;
    }

    /* The Close Button (x) */
    .close {
        position: absolute;
        right: 25px;
        top: 0;
        color: #000;
        font-size: 35px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #A264B4;
            cursor: pointer;
        }

    /* Add Zoom Animation */
    .animate {
        -webkit-animation: animatezoom 0.6s;
        animation: animatezoom 0.6s
    }


    .cancelbtn {
        width: 100%;
    }


    .hero-wrap {
        width: 100%;
        height: 100%;
        position: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        position: relative;
    }

        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            content: '';
            opacity: .3;
            background: #f1453d;
        }

        .hero-wrap.hero-wrap-2 {
            height: 300px;
        }

            .hero-wrap.hero-wrap-2 .slider-text {
                height: 300px;
            }

                .hero-wrap.hero-wrap-2 .slider-text .bread {
                    font-weight: 900;
                    color: #fff;
                }

                .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs {
                    text-transform: uppercase;
                    font-size: 13px;
                    letter-spacing: 1px;
                }

                    .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span {
                        color: #fff;
                        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
                    }

                        .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span a {
                            color: #fff;
                        }

    input {
        width: 100%;
        padding: 5px;
    }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('/Images/head.png');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread" style="text-align:center;">Delete Disaster</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index"> Home > <i class="ion-ios-arrow-forward"></i></a></span></p>
            </div>
        </div>
    </div>
</section>
<br />
<br />

<h3 style="color:#7E0272; align-content:center">Are you sure you want to delete this?</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2" style="color: #FF914D">
            DISASTER NAME
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisasterName)
        </dd>
        <dt class="col-sm-2" style="color: #FF914D">
            LOCATION
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2" style="color: #FF914D">
            DESCRIPTION
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2" style="color: #FF914D">
            START DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2" style="color: #FF914D">
            END DATE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2" style="color: #FF914D">
            AID TYPE
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AidType)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DisasterID" />
        <button type="submit" value="Delete">DELETE</button>
        <a asp-action="Index"><button value="Index" class="cancelbtn">BACK TO DONATION LIST</button></a>
    </form>
</div>
