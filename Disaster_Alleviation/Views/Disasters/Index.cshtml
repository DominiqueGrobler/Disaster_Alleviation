@model IEnumerable<Disaster_Alleviation.Models.Disaster>

@{
    ViewData["Title"] = "Disasters";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #E5E9ED;
        font-weight: bold;
    }
    /* Set a style for all buttons */
    button {
        background-color: #7E0272;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
    }

        button:hover {
            opacity: 0.8;
        }


    table
    {
        border-radius: 4px;
    }
    tr {
        background-color: #A264B4;
        color: #7E0272;
        font-weight: bold;
        text-align: center;

    }

    td{
        vertical-align: middle;
    }
    th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: center;
        background-color: #7E0272;
        color: white;

    }
   
    

    a {
        color: #FF914D;
        background-color: transparent;
    }

        a:hover {
            color: #FF7017;
            background-color: transparent;
        }

    .hero-wrap {
        width: 100%;
        height: 100%;
        position: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        position: relative;
    }

        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            content: '';
            opacity: .3;
            background: #f1453d;
        }

        .hero-wrap.hero-wrap-2 {
            height: 300px;
        }

            .hero-wrap.hero-wrap-2 .slider-text {
                height: 300px;
            }

                .hero-wrap.hero-wrap-2 .slider-text .bread {
                    font-weight: 900;
                    color: #fff;
                }

                .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs {
                    text-transform: uppercase;
                    font-size: 13px;
                    letter-spacing: 1px;
                }

                    .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span {
                        color: #fff;
                        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
                    }

                        .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span a {
                            color: #fff;
                        }

    .box {
        float: left;
        width: 33%; /* three boxes (use 25% for four, and 50% for two, etc) */
        padding-right: 10px;
    }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('/Images/head.png');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread" style="text-align:center;">Disaster</h1>
                <p class="breadcrumbs"><span class="mr-2"><a onclick="location.href=('/Home/Index')" style="cursor:pointer"> Home > <i class="ion-ios-arrow-forward"></i></a></span></p>
            </div>
        </div>
    </div>
</section>



<br />
<br />

<a asp-action="Create"><button value="Create" style="background-color: #FF914D"> <b>ADD DISASTER</b></button></a>

<table class="table" >
    <thead>
        <tr style="background-color:#E5E9ED">
            <th></th>
            <th>
                DISASTER
            </th>
            <th >
                LOCATION
            </th>
            <th >
                DESCRIPTION
            </th>
            <th >
                START DATE
            </th>
            <th >
                END DATE
            </th>
            <th >
                AID TYPE
            </th>
            <th >
                STATUS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr >
                <td></td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.DisasterName)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.AidType)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Status)
                    @if (DateTime.Today < item.StartDate)
                    {
                        <span style="color:white">Upcoming</span>
                    }
                    else @if (DateTime.Today >= item.StartDate && DateTime.Today < item.EndDate)
                    {
                        <span style="color:#97C71B">Active</span>
                    }

                    else @if (DateTime.Today >= item.EndDate )
                    {
                        <span style="color:#FF914D">Resolved</span>
                    }
                    
                </td>
                <td colspan="3">
                    <a asp-action="Details" asp-route-id="@item.DisasterID"><button value="Details" class="w3-small w3-padding-small" style="height:40px; font-size:13px"><b>DETAILS</b></button></a>

                </td>
               
            </tr>
            
        }
    </tbody>
</table>
<br />

