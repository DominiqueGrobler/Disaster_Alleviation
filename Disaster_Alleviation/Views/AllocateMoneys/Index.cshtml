@model IEnumerable<Disaster_Alleviation.Models.AllocateMoney>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #E5E9ED;
        font-weight: bold;
    }
    /* Set a style for all buttons */
    button {
        background-color: #7E0272;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
    }

        button:hover {
            opacity: 0.8;
        }

    tr {
        background-color: #A264B4;
        color: #7E0272;
        font-weight: bold;
        text-align: center;
    }


    th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: center;
        background-color: #7E0272;
        color: white;
    }

    a {
        color: #FF914D;
        background-color: transparent;
    }

        a:hover {
            color: #FF7017;
            background-color: transparent;
        }

    .hero-wrap {
        width: 100%;
        height: 100%;
        position: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        position: relative;
    }

        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            content: '';
            opacity: .3;
            background: #f1453d;
        }

        .hero-wrap.hero-wrap-2 {
            height: 300px;
        }

            .hero-wrap.hero-wrap-2 .slider-text {
                height: 300px;
            }

                .hero-wrap.hero-wrap-2 .slider-text .bread {
                    font-weight: 900;
                    color: #fff;
                }

                .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs {
                    text-transform: uppercase;
                    font-size: 13px;
                    letter-spacing: 1px;
                }

                    .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span {
                        color: #fff;
                        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
                    }

                        .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span a {
                            color: #fff;
                        }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('/Images/head.png');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread" style="text-align:center;">Allocated Monetary Donations</h1>
                <p class="breadcrumbs"><span class="mr-2"><a onclick="location.href=('/Disasters/Index')" > Disaster > <i class="ion-ios-arrow-forward"></i></a></span></p>
            </div>
        </div>
    </div>
</section>



<br />
<br />

<a asp-action="Create"><button value="Create">DONATE</button></a>

<table class="table">
    <thead>
        <tr>
            <th>
                DISASTER ID
            </th>
            <th>
                DISASTER NAME
            </th>
            <th>
                LOCATION
            </th>
            <th>
                AMOUNT
            </th>
            <th>
                DONATION DATE
            </th>
            <th>
                DONOR
            </th>
            <th></th>
 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.DisasterID)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.DisasterName)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td style="vertical-align: middle;">
                    R @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.DonationDate)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Donor)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AllocateM"><button value="Details" class="w3-small w3-padding-small" style="height:40px; font-size:13px"><b>DETAILS</b></button></a>

                </td>

               
            </tr>
        }
    </tbody>
    <tfoot>
        <tr style="background-color:#7E0272; color: #FF914D;  font-weight: bold;">

            <td>TOTAL MONEY ALLOCATED: R @Model.Sum(i => i.Amount)</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
           
        </tr>
    </tfoot>
</table>
<br />
<br />
<br />
