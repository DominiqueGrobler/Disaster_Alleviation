@model IEnumerable<Disaster_Alleviation.Models.Goods_donations>

@{
    ViewData["Title"] = "Index";
}

<style>

    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #E5E9ED;
    }
    /* Set a style for all buttons */
    button {
        background-color: #A264B4;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
    }

        button:hover {
            opacity: 0.8;
        }
    .cancelbtn {
        width: 100%;
        background-color: #FF914D;
    }

    a {
        color: #FF914D;
        background-color: transparent;
    }

        a:hover {
            color: #FF7017;
            background-color: transparent;
        }

    .hero-wrap {
        width: 100%;
        height: 100%;
        position: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        position: relative;
    }

        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            content: '';
            opacity: .3;
            background: #f1453d;
        }

        .hero-wrap.hero-wrap-2 {
            height: 300px;
        }

            .hero-wrap.hero-wrap-2 .slider-text {
                height: 300px;
            }

                .hero-wrap.hero-wrap-2 .slider-text .bread {
                    font-weight: 900;
                    color: #fff;
                }

                .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs {
                    text-transform: uppercase;
                    font-size: 13px;
                    letter-spacing: 1px;
                }

                    .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span {
                        color: #fff;
                        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
                    }

                        .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span a {
                            color: #fff;
                        }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('/Images/head.png');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread" style="text-align:center;">Donate Goods</h1>
                <p class="breadcrumbs"><span class="mr-2"><a onclick="location.href=('/Home/Index')"> Home > <i class="ion-ios-arrow-forward"></i></a></span></p>
            </div>
        </div>
    </div>
</section>
<br />
<br />

<button onclick="location.href=('/Categories/Index')" class="cancelbtn">SELECT DONATION CATEGORY</button>
<a asp-action="Create"><button value="Create">DONATE</button></a>

<table class="table">
    <thead>
        <tr>
            <th style="color: #7E0272 ">
                CATEGORY
            </th>
            <th style="color: #7E0272 ">
                NUMBER OF ITEMS
            </th>
            <th style="color: #7E0272 ">
                DESCRIPTION
            </th>
            <th style="color: #7E0272 ">
                DONATION DATE
            </th>
            <th style="color: #7E0272 ">
                DONOR
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Goods_Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_items)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Goods_Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Goods_Donor)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.GoodsID">Donation Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
