@model Disaster_Alleviation.Models.Monetary_donations

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #E5E9ED;
        font-weight: bold;
    }
    /* Set a style for all buttons */
    button {
        background-color: #7E0272;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
    }

        button:hover {
            opacity: 0.8;
        }

    tr:nth-child(odd) {
        background-color: #A264B4;
        color: #7E0272;
        font-weight: bold;
        text-align: center;
    }


    th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: center;
        font-weight: bold;
        background-color: #7E0272;
        color: white;
    }

    a {
        color: white;
        background-color: transparent;
    }

        a:hover {
            color: white;
            background-color: transparent;
        }

    .input-container {
        display: -ms-flexbox; /* IE10 */
        display: flex;
        width: 100%;
        margin-bottom: 15px;
        border-radius: 4px;
    }

    .icon {
        padding: 10px;
        background: #A264B4;
        color: white;
        min-width: 50px;
        text-align: center;
    }

    .input-field {
        width: 100%;
        padding: 10px;
        outline: none;
    }

        .input-field:focus {
            border: 2px solid #A264B4;
        }


    /* Set a style for all buttons */
    button {
        background-color: #7E0272;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
        height: 50px;
    }

        button:hover {
            opacity: 0.8;
        }

    tr {
        background-color: #A264B4;
        color: #7E0272;
        font-weight: bold;
        text-align: center;
    }


    th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: center;
        font-weight: bold;
        background-color: #7E0272;
        color: white;
    }

    /* Extra styles for the cancel button */
    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #FF914D;
    }

    /* Center the image and position the close button */
    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
        position: relative;
    }

    img.avatar {
        width: 40%;
        border-radius: 50%;
    }

    .container {
        padding: 16px;
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }

    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        padding-top: 60px;
    }

    /* Modal Content/Box */
    .modal-content {
        background-color: #CEBAD4;
        margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
        border: 1px solid #888;
        width: 80%; /* Could be more or less, depending on screen size */
        box-shadow: 0 0 30px 0 #7E0272;
    }

    /* The Close Button (x) */
    .close {
        position: absolute;
        right: 25px;
        top: 0;
        color: #000;
        font-size: 35px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #A264B4;
            cursor: pointer;
        }

    /* Add Zoom Animation */
    .animate {
        -webkit-animation: animatezoom 0.6s;
        animation: animatezoom 0.6s
    }


    .cancelbtn {
        width: 100%;
        background-color: #FF914D;
    }


    .hero-wrap {
        width: 100%;
        height: 100%;
        position: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        position: relative;
    }

        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            content: '';
            opacity: .3;
            background: #f1453d;
        }

        .hero-wrap.hero-wrap-2 {
            height: 300px;
        }

            .hero-wrap.hero-wrap-2 .slider-text {
                height: 300px;
            }

                .hero-wrap.hero-wrap-2 .slider-text .bread {
                    font-weight: 900;
                    color: #fff;
                }

                .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs {
                    text-transform: uppercase;
                    font-size: 13px;
                    letter-spacing: 1px;
                }

                    .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span {
                        color: #fff;
                        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
                    }

                        .hero-wrap.hero-wrap-2 .slider-text .breadcrumbs span a {
                            color: #fff;
                        }

    input {
        width: 100%;
        padding: 5px;
    }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('/Images/head.png');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread" style="text-align:center;">Monetary Donation Details</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index"> Home > <i class="ion-ios-arrow-forward"></i></a></span></p>
            </div>
        </div>
    </div>
</section>
<br />
<br />
